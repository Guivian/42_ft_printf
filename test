Name = libftprintf.a

CC = gcc

CFLAGS = -Wall -Wextra -Werror

LIBFT_DIR =	libft

HEADER = ft_printf.h -L./libft -lft

C_SRC = $(wildcard *.c)

SRC_OBJ = $(C_SRC:.c=.o)

all: $(NAME)

$(NAME): $(SRC_OBJ)
	@make -C $(LIBFT_DIR)
	@cp libft/libft.a ./$(NAME)
	@ar rcs $(NAME) $(SRC_OBJ)
	@ranlib $(NAME)

.o.c:
	@$(CC) $(C_FLAGS) -I $(HEADER) -o $@ -c $<

clean:
	@rm -f *.o
	@make clean -C $(LIBFT)

fclean: clean
	@rm -f $(NAME)
	@make fclean -C $(LIBFT)

re: fclean all

.PHONY: all clean fclean re
